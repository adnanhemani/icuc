%h1 Optical Wavefront Analysis
%h2 Edit the Zernikes

= button_to "Reset to All Zeros", set_all_zero_path, :method => :post

= form_tag update_path, :method => :post do
  %table{:border => 1}
    %tbody
      %tr
        %td i: Index
        %td n &emsp;
        %td m &emsp;
        %td Term nickname
        %td Term
      %tr
        %td= 0
        %td= ""
        %td= ""
        %td= @nicknames[0]
        %td= 0.0
      - (0...@zernikes.size).each do |i|
        - if i == 0 or i == 2 or i == 5 or i == 9 or i == 14 or i == 20 or i == 27 or i == 35 or i == 44 or i == 54
          %td= ""
        
        %tr
          %td= i+1
          %td= ""
          %td= ""
          %td= @nicknames[i+1]
          %td= text_field_tag i, @zernikes[i]
    
  = submit_tag "Save"